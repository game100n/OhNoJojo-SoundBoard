<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soundboard.joseph"
    android:versionCode="1"
    android:versionName="1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.soundboard.joseph.SplashScreen"
            android:label="@string/title_activity_soundboard"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.soundboard.joseph.SoundBoard"
            android:label="@string/title_activity_soundboard"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.ohno.ohnojojo_soundboard.MAINACTIVITY"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

    </application>

</manifest>
